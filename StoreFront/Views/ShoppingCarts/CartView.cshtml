@model IEnumerable<StoreFront.Models.ShoppingCartProduct>
@{
    ViewBag.Title = "CartView";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<head>
 <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript" language="javascript">
    $('.count').on('blur', function () {
        $('.update').attr('src', '@Url.Action("UpdateQuantity","ShoppingCarts", new{ text = "----"})'.replace("---"),$('.count').val() + '?productId=' + $('.productId').value + '?cartId=' + $('.cartId').value + '?quant=' + $('.quant').value)
    });
</script>
</head>



<h2>@Session["name"]'s Shopping Cart</h2>
<h2>@Session["EmptyCart"]</h2>


<table class="table">
    <tr>
        <th> @Html.DisplayNameFor(model => model.ProductName)</th>
        <th> @Html.DisplayNameFor(model => model.Quantity)</th>
        <th> @Html.DisplayNameFor(model => model.Price)</th>
    </tr>
@foreach (var item in Model)
{
    <tr id="#row-@item.ProductID">
        <td> @Html.DisplayFor(modelItem => item.ProductName)</td>
        <td> @Html.TextBoxFor(modelItem => item.Quantity, new { @class = "quant" }) @Html.ActionLink("update", "UpdateQuantity", "ShoppingCarts",  new { productId = item.ProductID, cartId = item.ShoppingCartID, quant = item.Quantity }, null)</td>
        <td>$@Html.DisplayFor(modelItem => item.Price)</td>
        <td> @Html.ActionLink("x", "Delete", "ShoppingCarts", new { productId = item.ProductID, cartId = item.ShoppingCartID }, null) </td>
    </tr>
}
</table>


<table class="table">
    <tr>
        <th>
            <p>Your Total Is :  @ViewBag.Price</p>
        </th>
    </tr>
</table>


