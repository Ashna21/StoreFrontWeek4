@model StoreFront.Models.User

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Register", "Users", FormMethod.Post, new { @class = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m=>m.UserName)
        @Html.TextBoxFor(m=>m.UserName, new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m=>m.EmailAddress)
        @Html.TextBoxFor(m=>m.EmailAddress, new { @class = "form-contorl"})
    </div>

    <input type="submit" class="btn btn-primary" value="Register Me!" />
}



